{
  "compilerOptions": {
    // "rootDir": "src",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./custom_typings"],
    "paths": {
      "@src/*": ["./src/*"],
      "@/common/*": ["./common/*"],
      "@/contants/*": ["./contants/*"],
      "@/decorators/*": ["./decorators/*"],
      "@/exceptions/*": ["./exceptions/*"],
      "@/shared/*": ["./shared/*"],
      "@/prisma/*": ["./prisma/*"],
      "@/modules/*": ["./modules/*"],
      "@/configs/*": ["./configs/*"],
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "ts-node-dev": {
    "require": ["tsconfig-paths/register"]
  }
}
